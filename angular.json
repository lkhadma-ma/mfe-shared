{
	"$schema": "./node_modules/@angular/cli/lib/config/schema.json",
	"version": 1,
	"newProjectRoot": "projects",
	"projects": {
		"shared": {
			"projectType": "application",
			"schematics": {
				"@schematics/angular:component": {
					"style": "scss"
				}
			},
			"root": "projects/shared",
			"sourceRoot": "projects/shared/src",
			"prefix": "app",
			"architect": {
				"build": {
					"builder": "@angular-architects/native-federation:build",
					"options": {},
					"configurations": {
						"prod": {
							"target": "shared:esbuild-prod:prod"
						},
						"dev": {
							"target": "shared:esbuild-dev:dev"
						}
					},
					"defaultConfiguration": "dev"
				},
				"serve": {
					"builder": "@angular-architects/native-federation:build",
					"options": {
						"target": "shared:serve-original:dev",
						"rebuildDelay": 0,
						"dev": true,
						"port": 0
					}
				},
				"extract-i18n": {
					"builder": "@angular/build:extract-i18n"
				},
				"test": {
					"builder": "@angular/build:karma",
					"options": {
						"polyfills": [
							"zone.js",
							"zone.js/testing"
						],
						"tsConfig": "projects/shared/tsconfig.spec.json",
						"inlineStyleLanguage": "scss",
						"assets": [
							{
								"glob": "**/*",
								"input": "projects/shared/public",
								"output": "/assets"
							}
						],
						"styles": [
							"projects/shared/src/styles.scss"
						]
					}
				},
				"esbuild-dev": {
					"builder": "@angular/build:application",
					"options": {
						"browser": "projects/shared/src/main.ts",
						"polyfills": [
							"zone.js",
							"es-module-shims"
						],
						"tsConfig": "projects/shared/tsconfig.app.json",
						"inlineStyleLanguage": "scss",
						"assets": [
							{
								"glob": "**/*",
								"input": "projects/shared/public",
								"output": "/assets"
							}
						],
						"styles": [
							"projects/shared/src/styles.scss"
						]
					},
					"configurations": {
						"dev": {
							"optimization": false,
							"extractLicenses": false,
							"sourceMap": true
						}
					},
					"defaultConfiguration": "dev"
				},			  
				"esbuild-prod": {
					"builder": "@angular/build:application",
					"options": {
						"browser": "projects/shared/src/main.ts",
						"polyfills": [
							"zone.js",
							"es-module-shims"
						],
						"tsConfig": "projects/shared/tsconfig.app.json",
						"inlineStyleLanguage": "scss",
						"styles": [
							"projects/shared/src/styles.scss"
						]
					},
					"configurations": {
						"prod": {
							"budgets": [
								{
									"type": "initial",
									"maximumWarning": "500kB",
									"maximumError": "1MB"
								},
								{
									"type": "anyComponentStyle",
									"maximumWarning": "4kB",
									"maximumError": "8kB"
								}
							],
							"outputHashing": "all"
						}
					},
					"defaultConfiguration": "prod"
				},
				"serve-original": {
					"builder": "@angular/build:dev-server",
					"configurations": {
						"prod": {
							"buildTarget": "shared:esbuild-prod:prod"
						},
						"dev": {
							"buildTarget": "shared:esbuild-dev:dev"
						}
					},
					"defaultConfiguration": "dev",
					"options": {
						"port": 4202
					}
				}
			}
		}
	}
}